<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4">
    <h1 class="mb-4">Upload Content</h1>

    <%= form_with(model: @content, url: contents_path, local: true, html: { class: "mt-4" }) do |form| %>
      
      <% if @content.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@content.errors.count, 'error') %> prohibited this content from being saved:</h2>

          <ul>
            <% @content.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row mb-3">
        <div class="col-md-2">
          <%= form.label :title, class: "form-label" %>
        </div>
        <div class="col-md-10">
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="row mb-3">
        <div class="col-md-2">
          <%= form.label :description, class: "form-label" %>
        </div>
        <div class="col-md-10">
          <%= form.text_area :description, class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="row mb-3">
        <div class="col-md-2">
          <%= form.label :content_type, class: "form-label" %>
        </div>
        <div class="col-md-10">
          <%= form.select :content_type, Content.content_types.keys, {}, class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="row mb-3">
        <div class="col-md-2">
          <%= form.label :file, class: "form-label" %>
        </div>
        <div class="col-md-10">
          <%= form.file_field :file, class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-12">
          <%= form.submit 'Submit', class: "btn btn-primary bg-blue-500 hover:bg-blue-700", style: "padding: 10px;" %>
        </div>
      </div>
      
    <% end %>
  </div>
</div>
