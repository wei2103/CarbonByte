<div class="flex flex-col items-center px-20 pb-4">
  <div class="card p-4" style="border: 2px solid #ccc;">
    <h1 class="mb-4 text-3xl"><strong>Upload Content Form</strong></h1><br>
  
    <%= form_with(model: @content, url: contents_path, local: true, html: { class: "mt-4" }) do |form| %>
      <div class="row mb-3">
        <div class="col-md-2">
          <%= form.label :title, class: "form-label" %>
        </div>
        <div class="col-md-10">
          <%= form.text_field :title, class: "form-control", required: true, style: "width: 100%;"%>
          <% @content.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-2">
          <%= form.label :description, class: "form-label" %>
        </div>
        <div class="col-md-10">
          <%= form.text_area :description, class: "form-control", required: true, rows:10, style: "width: 100%;" %>
          <% @content.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-2">
          <%= form.label :content_type, class: "form-label" %>
        </div>
        <div class="col-md-10">
          <%= form.select :content_type, ['video', 'article', 'infographic'], {}, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-2">
          <%= form.label :content_link, class: "form-label" %>
        </div>
        <div class="col-md-10">
          <%= form.text_field :content_link, class: "form-control", required: true, style: "width: 100%;" %>
          <% @content.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 text-center">
          <%= form.submit 'Submit', class: "btn btn-primary bg-blue-500 hover:bg-blue-700 ", style: "padding: 10px;" %>
        </div>
      </div>
      
    <% end %>
  </div>
</div>
